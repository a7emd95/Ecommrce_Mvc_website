
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>avenue cloth</title>
    <link rel="stylesheet" href="~/Content/cs.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <link rel="shortcut icon" href="~/Content/image/icon.png" type="image/x-icon">

    <script src="~/Scripts/js.js"></script>
</head>
<body>
    <div class=" bg-light">


        <nav class="container navbar navbar-expand-lg navbar-light bg-light py-0">
            <div style="max-width: 60%;">
                <a class="navbar-brand" href="/Home" style="display: contents;">
                    <img src="~/Content/image/logo.png" class="img-fluid py-1" style="width: 40%!important;" alt="">
                </a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item mr-1 p-1">
                        <a class="nav-link" href="#man's">Men's</a>
                    </li>
                    <li class="nav-item mr-1 p-1">
                        <a class="nav-link" href="#dress_product">Woman's</a>
                    </li>
                    <li class="nav-item mr-1 p-1">
                        <a class="nav-link" href="#">Kide's</a>
                    </li>

                    @if(User.Identity.IsAuthenticated && User.IsInRole("admin")){

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Category/create">Create Category</a>
                                <a class="dropdown-item" href="/Category/index">Category</a>
                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item" href="/Product/create">Create Product</a>
                                <a class="dropdown-item" href="/Product/Index">Product</a>
                            </div>
                        </li>

                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mr-1 p-1 btn-cart">
                            <a class="nav-link" href="/Favorite/My_FaviorateProduct"><i class="fas fa-heart"></i></a>
                        </li>
                        <li class="nav-item mr-1 p-1 btn-cart">
                            <a class="nav-link" href="/Cart/Index"><i class="fas fa-shopping-cart"></i></a>
                        </li>
                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mr-1 p-1 nav-login">
                            <a class="nav-link border rounded" href="/account/login">Login</a>
                        </li>
                        <li class="nav-item mr-1 p-1 nav-regist">
                            <a class="nav-link border rounded" href="account/Register">Regist</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mr-1 p-1 nav-Sign-Out">
                            <a class="nav-link border rounded btn-sign-out" href="/Account/Logout">Sign Out</a>
                        </li>
                    }

                </ul>
            </div>
        </nav>




    </div>

    <div class="modal  fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-login ">
                    <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label passNotCorrect" for="exampleCheck1">password not correct</label>
                        </div>
                    </form>


                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-primary btn-orange btn-login " id="asdf">Login</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal  fade" id="exampleModalregist" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-login ">
                    <h5 class="modal-title" id="exampleModalLabel1">Regint</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="">First name</label>
                            <input type="text" class="form-control" id="userName" placeholder=" name">
                            <div class="form-group form-check userInform" style="display: none;">
                                <label class="form-check-label ">userName not in correct syntex</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail2">Email address</label>
                            <input type="email" class="form-control" id="EmailRegist" aria-describedby="emailHelp">
                            <div class="form-group form-check emailInform" style="display: none;">
                                <label class="form-check-label ">email not correct</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword2">Password</label>
                            <input type="password" class="form-control" id="PasswordRegist">
                            <div class="form-group form-check passwordInform" style="display: none;">
                                <label class="form-check-label ">password not strong</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPasswordRepeat">Repeat-Password</label>
                            <input type="password" class="form-control" id="PasswordRepeatRegist">
                            <div class="form-group form-check notRepeadInform" style="display: none;">
                                <label class="form-check-label ">password not repeat</label>
                            </div>
                        </div>
                    </form>
                    <div class="form-group form-check userExistInform" style="display: none;">
                        <label class="form-check-label ">This User Is Existing already</label>
                    </div>

                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-primary btn-orange btn-regist">Regist</button>
                </div>
            </div>
        </div>
    </div>

    <header style="padding:10px 0% ;">
        <div class="container d-flex justify-content-center">
            <div class="my-5 py-5">
                <h1 class="text-center">Clothing made for you</h1>
                <h3 class="text-center">find the perfect outfit</h3>
            </div>
        </div>
    </header>

    <!-- search -->
    <div class="">
        <div class="container p-3">
            <form action="/Product/Search" method="get">
                <div class="row ">
                    <div class="col-12 col-md-8">
                        <input type="search"  name="ProductName" class="form-control" placeholder="search about product">
                    </div>
                    <div class="col-12 col-md-4">
                        <input type="submit" value="Search" class="btn btn-primary btn-orange w-100"/>
                    </div>
                </div>

            </form>
        </div>
    </div>
        

    <div class="container my-3">
        @RenderBody()
    </div>

    <div class="background-gray p-2">
        <div class="container">
            <div class="row justify-content-around text-center">
                <h2 class="col-12">Popular brands we carry</h2>
                <h5 class="col-12">quality you can count on</h5>
            </div>
            <div class="row justify-content-around">
                <div class="col-12 col-sm-6 col-md-2">
                    <img src="~/Content/image/brand1.png" class="img-fluid">
                </div>
                <div class="col-12 col-sm-6 col-md-2">
                    <img src="~/Content/image/brand2.png" class="img-fluid">
                </div>
                <div class="col-12 col-sm-6 col-md-2">
                    <img src="~/Content/image/brand3.png" class="img-fluid">
                </div>
                <div class="col-12 col-sm-6 col-md-2">
                    <img src="~/Content/image/brand4.png" class="img-fluid">
                </div>
                <div class="col-12 col-sm-6 col-md-2">
                    <img src="~/Content/image/brand5.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <footer class="container">
        <div class="row justify-content-around py-4">
            <div class="col-12 col-md-6">
                <h3>Shop by category</h3>
                <p class="pl-1" style="color: #6b6f81;">and find what you need</p>
                <ul class="list-unstyled text-sm pt-1 pl-4">
                    <li class="mb-2">
                        <a class="text-muted text-hover-dark link-animated" href="#man's">Man's</a>
                    </li>
                    <li class="mb-2">
                        <a class="text-muted text-hover-dark link-animated" href="#dress_product">Woman's</a>
                    </li>
                    <li class="mb-2">
                        <a class="text-muted text-hover-dark link-animated" href="#">Kide's</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-6">
                <h3>Stay in avenue</h3>
                <ul class="list-unstyled text-sm pt-1 row justify-content-center">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class=" mr-1 p-2 nav-login col-8 col-md-3">
                            <a class="nav-link border rounded text-center footer" href="/Account/Login">Login</a>
                        </li>
                        <li class="mr-1 p-2 nav-regist col-8 col-md-3">
                            <a class="nav-link border rounded text-center footer" href="/Account/Register">Regist</a>
                        </li>

                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="mr-1 p-2 nav-Sign-Out col-8 col-md-6">
                            <a class="nav-link border rounded btn-sign-out text-center footer" href="~/Account/Logout">Sign Out</a>
                        </li>
                    }
                </ul>
            </div>
        </div>

    </footer>






    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
