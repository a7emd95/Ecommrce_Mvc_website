@model IEnumerable<DAL.Product>



@{
    ViewBag.Title = "My_FaviorateProduct";
}



<h2>My_FaviorateProduct</h2>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Quentity)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Category_Id)
            </th>*@
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Quentity)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Category_Id)
                </td>*@
        <td>
            <a href="/product/ShowDetails/@item.Id" class="btn btn-primary btn-orange">Quick Shop</a>
            <a href="/Favorite/DeleteFaviorateProduct/@item.Id" class="btn btn-primary btn-danger mr-1 btn-Add-To-Card">Delete</a>
        </td>
        </tr>
    }



</table>